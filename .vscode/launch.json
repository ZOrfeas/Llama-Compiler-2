    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'llamac'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=llamac",
                    "--package=llamac"
                ],
                "filter": {
                    "name": "llamac",
                    "kind": "bin"
                }
            },
            "args": [
                "./tests/input.lla",
                "--stop-after",
                "preprocessing",
                "-v",
                "print",
                "--preprocessed",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'llamac'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=llamac",
                    "--package=llamac"
                ],
                "filter": {
                    "name": "llamac",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}