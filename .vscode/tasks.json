{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build release version",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build/release -j 4",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build debug version",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build/debug -j 4",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}